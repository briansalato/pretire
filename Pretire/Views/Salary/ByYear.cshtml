@model Pretire.ViewModels.Salary.ViewSalariesViewModel
@{
    ViewBag.Title = "Salary";
}

<h2>Salary</h2>

<table>
    <thead>
        <tr>
            <td>Year</td>
            <td>Salary</td>
            <td>401k Contribution</td>
            <td>Income Tax</td>
            <td>Remaining Salary</td>
        </tr>
    </thead>
    @foreach(var year in Model.SalariesByYear)
    {
        <tr>
            <td>
                @year.Year
            </td>
            <td>
                @year.BaseIncome.ToString("c0")
            </td>
            <td>
                @year.ContributionTo401k.ToString("c0")
            </td>
            <td>
                @year.TaxesPaid.ToString("c0")
            </td>
            <td>
                @year.RemainingIncome.ToString("c0")
            </td>
        </tr>
    }
</table>
